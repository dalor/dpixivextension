{

  "manifest_version": 2,
  "name": "dpixiv",
  "version": "2.0.0",

  "description": "Auth users to https://dpixiv.herokuapp.com/",
  "homepage_url": "https://dpixiv.herokuapp.com/",

  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  },

  "permissions": [
    "storage"
  ],

  "content_scripts": [{
    "matches": ["*://accounts.pixiv.net/*"],
    "js": ["scripts/addButton.js"]
  }]

}